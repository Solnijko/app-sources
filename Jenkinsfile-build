pipeline {
    agent {
        docker {
            image 'maven:3.9.5-eclipse-temurin-17-alpine' 
            args '-v /root/.m2:/root/.m2' 
        }
    }
    stages {
        stage('Build') { 
            steps {
                git branch: 'main', poll: false, url: 'https://github.com/Solnijko/application-sources.git'
                sh 'mvn compile war:war'
                archiveArtifacts artifacts: 'target/*.war', followSymlinks: false
                def formattedDate = sh(script: 'date "+%m.%d.%Y:%H.%M"', returnStdout: true).trim()
                sh "cp target/*.war /var/jenkins_home/jobs/petclinic-build/wars/petclinic-${formattedDate}.war"
            }
        }
    }
}

pipeline {
    agent {
        docker {
            image 'maven:3.9.5-eclipse-temurin-17-alpine' 
            args '-v /root/.m2:/root/.m2' 
        }
    }
    stages {
        stage('Checkout'){
            steps{
                git branch: 'main', poll: false, url: 'https://github.com/Solnijko/application-sources.git'
            }
        }
        stage('Build') { 
            steps {
                sh 'mvn compile war:war'
            }
        }
    }
    post {
        archiveArtifacts artifacts: 'target/*.war', followSymlinks: false
        script {
            def buildId = [
                [$class: 'StringParameterValue', name: 'BUILD_ID', value: "${BUILD_ID}"]
            ]
            build job: 'petclinic-deploy', parameters: buildId
        }
    }
}
